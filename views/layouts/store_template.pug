extends template.pug
block template
    section#product1.section-p1
        h2 All Products
        .pro-contain
            each val in items
                a(href=`shop/product/${val.id}`).pro
                    img(src=val.image alt='')
                    .desc
                        span=val.manufacturer
                        h5=val.name
                        .star
                            i.fas.fa-star
                            i.fas.fa-star
                            i.fas.fa-star
                            i.fas.fa-star
                            i.fas.fa-star
                        h4='$'+val.price
    block store_template